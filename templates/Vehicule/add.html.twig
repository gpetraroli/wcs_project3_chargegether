{% extends 'base.html.twig' %}

{% block title %}Véhicules - Chargether{% endblock %}

{% block specific_stylesheets %}    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}


{% block body %}

    <div class="d-flex justify-content-center">
        <a class="m-4 text-decoration-none text-center col-9 d-flex align-items-center justify-content-center rounded-pill bg-secondary
					            gap-3"
           href="#">
            <h6 class="text-white my-2">
                RECHERCHER
            </h6>
            <i class="bi bi-search text-white"></i>
        </a>
    </div>

    <hr class="mx-3">

    <h3 class="text-secondary text-center">Sélectionnez le modèle</h3>

    <div id="myCarousel" class="carousel slide" data-bs-interval="false" data-bs-ride="true" >

        <div class="carousel-indicators">
            {% for vehicle in vehicles %}
                <button type="button"
                        data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="{{ loop.index - 1 }}"
                        class="{{ loop.index == 1 ? 'active' : '' }}"
                        aria-current="{{ loop.index == 1 ? 'true' : '' }}"
                        aria-label="Slide {{ loop.index }}">
                </button>
            {% endfor %}
        </div>

         <div class="carousel-inner">
            {% for vehicle in vehicles %}
            <div class="carousel-item {{ loop.index == 1 ? 'active' : '' }}">
                <div class="col">
                    <div class="card border-0">
                        <img src="/images/vehicules/{{ vehicle.image }}" alt="">
                        <div class="card-body">
                            <div class="mx-5 d-flex flex-column ">
                                <h2 class="d-flex justify-content-center text-secondary">
                                    {{ vehicle.brand }} {{ vehicle.model }}
                                </h2>
                            </div>

                            <div class="mx-3 d-flex justify-content-between">
                                <h6 class="text-secondary">Marque</h6>
                                <h6 class="text-primary">{{ vehicle.brand }}</h6>
                            </div>

                            <div class="mx-3 d-flex justify-content-between">
                                <h6 class="text-secondary">Modèle</h6>
                                <h6 class="text-primary">{{ vehicle.model }}</h6>
                            </div>

                            <div class="mx-3 d-flex justify-content-between">
                                <h6 class="text-secondary">Capacité batterie </h6>
                                <h6 class="text-primary">{{ vehicle.batteryCapacity }} . kWh</h6>
                            </div>

                            <div class="mx-3 d-flex justify-content-between">
                                <h6 class="text-secondary">Type de prise</h6>
                                <h6 class="text-primary">{{ vehicle.plugType }}</h6>
                            </div>

                            <div class="mx-3 d-flex justify-content-between">
                                <h6 class="text-secondary">Puissance de batterie</h6>
                                <h6 class="text-primary">{{ vehicle.batteryPower }} . kWh</h6>
                            </div>

                            <div class="d-flex justify-content-center align-items-center">
                                <div class=" d-flex justify-content-center">
                                    <a class="col-10 m-4 text-center text-decoration-none justify-content-center
                                    rounded-pill bg-secondary gap-3"
                                       href="{{ path('vehicle_add', {'id': vehicle.id}) }}">
                                        <h6 class="text-white my-2">
                                            VALIDER
                                        </h6>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>

    </div>



{% endblock %}
