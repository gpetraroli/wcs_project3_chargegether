{% extends 'base.html.twig' %}

{% block title %}
    Home - Chargether
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('map') }}
    <script defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD9Ymmg4k3WlkkA4hlom351Yp1tn3nhOeY&callback=initMap"></script>
{% endblock %}

{% block body %}
<section class="fixed-top mt-5">
    <div class="w-100 text-center mt-3">
        <button type="button" class="btn bg-light border border-secondary border-3 rounded-pill">
            <span class="fw-bolder text-secondary">
                {% for vehicule in app.user.vehicles %}
                    {{ vehicule.brand }} {{ vehicule.model }}
                {% endfor %}
            </span>
        </button>
    </div>
</section>

    {% include 'components/_map.html.twig' %}
    <div id="station-info" class="d-none station-info position-absolute bottom-0 bg-white w-100 d-flex flex-column gap-4 p-3 pt-4 align-items-center"></div>
{% endblock %}
