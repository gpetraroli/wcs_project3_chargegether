{% extends 'base.html.twig' %}

{% block title %}Profil - Chargether{% endblock %}

{% block body %}

    <header class="bg-primary d-flex justify-content-center">
        <h1 class="text-white my-3">
            Profil
        </h1>
    </header>
    <div class="d-flex flex-column mx-3 gap-4 mb-5">
        <div class="d-flex align-items-center m-3 mb-0">
            <div class="d-flex flex-column">
                <img
                    {% if app.user.imageName is not null %}
                        src="/images/profile_images/{{ app.user.imageName }}"
                    {% else %}
                        src="/images/default_images/default_Users_Profile.png"
                    {% endif %}

                    alt="Image de profil de Michel" class="bd-placeholder-img rounded-circle border border-2 border-info" width="100" height="100" style="object-fit: cover">

            </div>
            <div>
                <h1 class="ms-5 text-secondary">
                    {{ app.user.firstName ~ ' ' ~ app.user.lastName }}
                </h1>
            </div>
        </div>
        <div class="d-flex flex-column align-items-start gap-4 text-secondary">

            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-person-circle fs-1"></i>
                <a class="text-center text-decoration-none link-secondary" href="{{ path('app_profil_infos') }}">
                    <h4 class="m-0">Informations personnelles</h4>
                </a>
            </div>
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-key-fill fs-1"></i>
                <a class="text-center link-secondary text-decoration-none" href="{{ path('app_profil_edit_password') }}">
                    <h4 class="m-0">Mot De Passe</h4>
                </a>
            </div>
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-truck fs-1"></i>
                <a class="text-center link-secondary text-decoration-none" href="{{ path('vehicules') }}">
                    <h4 class="m-0">Véhicules</h4>
                </a>
            </div>
            <div class="d-flex align-items-center gap-3">
                <i class="bi bi-bell fs-1 position-relative">
                    <span class="{{ notifications|length == 0 ? 'd-none' : '' }} position-absolute start-100 translate-middle p-2 bg-danger border border-light rounded-circle"></span>
                </i>
                <a class="text-center link-secondary text-decoration-none" href="{{ path('app_notifications') }}">
                    <h4 class="m-0">Notifications</h4>
                </a>
            </div>
            <div class="d-flex align-items-center gap-3">
            <i class="bi bi-chat-text fs-1"></i>
                <a class="text-center link-secondary text-decoration-none" href="{{ path('app_question_user') }}">
                    <h4 class="m-0">FaQ</h4>
                </a>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <a class="px-5 text-center d-flex align-items-center justify-content-center rounded-pill bg-primary gap-3"
               href="{{ app.user.stations|length ? path('app_hotes') : path('app_hote_inscription') }}">
                <i class="{{ app.user.stations|length ? 'bi bi-plugin fs-1' : 'fa-solid fa-car-rear fa-2xl'}} fa-2xl text-white"></i>
                <h3 class="text-white my-2">
                    {{ app.user.stations|length ? 'MA BORNE' : 'DEVENIR HÔTE' }}
                </h3>
            </a>
        </div>
        <hr class="border border-secondary">
        <div class="d-flex justify-content-between align-items-center">

            <div class="d-flex align-items-center gap-2">
                <i class="fa-regular fa-envelope"></i>
                <a class="text-decoration-none text-secondary d-flex gap-2 align-items-center" href="{{ path('app_contact') }}">
                    <i class="bi bi-envelope-fill fs-2"></i>
                    <h5 class="text-center m-0">Contactez-nous</h5>
                </a>
            </div>

            <div class="d-flex align-items-center gap-2 text-secondary">
                <i class="bi bi-share-fill fs-2"></i>
                <h5 class="text-center m-0 text-secondary">Partagez</h5>
            </div>
        </div>
        <hr class="border border-secondary">
        <div class="d-flex flex-column gap-4">
            <p class="text-center m-0"> Suivez Chargether sur les réseaux sociaux </p>
            <div class="d-flex justify-content-center gap-5">
                <a href="https://www.instagram.com/chargether/" class="text-secondary">
                    <i class="bi bi-instagram fs-1"></i>
                </a>
                <a href="https://www.facebook.com/chargether/" class="text-secondary">
                    <i class="bi bi-facebook fs-1"></i>
                </a>
                <a href="#" class="text-secondary">
                    <i class="bi bi-twitter fs-1"></i>
                </a>
            </div>
            <div class="d-flex justify-content-center">
                <a href="{{ path('app_logout') }}" class="text-center text-danger text-decoration-none mb-5 pb-5"> se
                    deconnecter
                </a>
            </div>
        </div>
    </div>
{% endblock %}
