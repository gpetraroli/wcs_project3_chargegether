{% extends 'base.html.twig' %}

{% block title %}Profil - Chargether
{% endblock %}

{% block specific_javascript %}
    <script src="https://kit.fontawesome.com/47e5d2715e.js" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}

    <header class="bg-primary d-flex justify-content-center">
        <h1 class="text-white my-3">
            Profil
        </h1>
    </header>

    <div class="d-flex justify-content-start align-items-center m-3 mb-0">
        <div class="d-flex flex-column">

            <img
                {% if user.imageName is not null %}
                    src="/images/profile_images/{{ user.imageName }}"
                {% else %}
                    src="/images/default_images/default_Users_Profile.png"
                {% endif %}

                alt="Image de profil de Michel" class="bd-placeholder-img rounded-circle border border-2 border-info" width="100" height="100" style="object-fit: cover">
            <a href="#" class="text-decoration-none text-info link-secondary">
                <small>
                    Changer de photo</small>
            </a>
        </div>

        <h1 class="ms-5 text-secondary">
            {{ user.firstName ~ ' ' ~ user.lastName }}
        </h1>
    </div>

		<div class="d-flex flex-column gap-4">

    <div class="d-flex flex-column gap-4 text-secondary">

        <div class="d-flex align-items-center">
            <i class="fa-solid fa-user fa-2xl col-3 text-center"></i>
            <a class="col-9 text-center text-decoration-none link-secondary" href="{{ path('app_profil_infos') }}">
                <h4>Informations personnelles</h4>
            </a>
        </div>
        <div class="d-flex align-items-center">
            <i class="fa-solid fa-key fa-2xl  col-3 text-center"></i>
            <a class="col-9 text-center link-secondary text-decoration-none" href="#">
                <h4>Mot De Passe</h4>
            </a>
        </div>
        <div class="d-flex align-items-center">
            <i class="fa-solid fa-car-rear fa-2xl  col-3 text-center"></i>
            <a class="col-9 text-center link-secondary text-decoration-none" href="{{ path('app_profil_vehicules') }}">
                <h4>Véhicules</h4>
            </a>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <a class="m-4 text-center col-9 d-flex align-items-center justify-content-center rounded-pill bg-primary gap-3"
           href="{{ app.user.stations|length ? path('app_hotes') : path('app_hote_inscription') }}">
            <i class="{{ app.user.stations|length ? 'bi bi-plugin fs-1' : 'fa-solid fa-car-rear fa-2xl'}} fa-2xl text-white"></i>
            <h3 class="text-white my-2">
                {{ app.user.stations|length ? 'MA BORNE' : 'DEVENIR HÔTE' }}
            </h3>
        </a>
    </div>

		<div class="d-flex justify-content-center align-items-center gap-3">

			<div class="d-flex align-items-center gap-2">
				<i class="fa-regular fa-envelope"></i>
				<a class="text-decoration-none text-dark" href="{{ path('app_contact') }}">
					<h5 class="text-center m-0">Contactez-nous</h5>
				</a>
			</div>

        <div class="d-flex align-items-center gap-2 text-secondary">
            <i class="fa-solid fa-square-share-nodes"></i>
            <h5 class="text-center m-0 text-secondary">Partagez</h5>
        </div>
        </div>

		<hr class="mx-3">

            <p class="text-center"> Suivez Chargether sur les réseaux sociaux </p>
            <div class="d-flex  justify-content-center gap-5 mb-3">
                <a href="#" class="text-dark">
                    <i class="bi bi-instagram fs-1"></i>
                </a>
                <a href="#" class="text-dark">
                    <i class="bi bi-facebook fs-1"></i>
                </a>
                <a href="#" class="text-dark">
                    <i class="bi bi-twitter fs-1"></i>
                </a>
            </div>
        <a href="{{ path('app_logout') }}" class="text-center text-danger text-decoration-none"> se deconnecter </a>

    <p class="text-center"> Suivez Chargether sur les réseaux sociaux </p>
    <div class="d-flex justify-content-center gap-5 mb-3">
        <a href="#" class="text-secondary">
            <i class="bi bi-instagram fs-1"></i>
        </a>
        <a href="#" class="text-secondary">
            <i class="bi bi-facebook fs-1"></i>
        </a>
        <a href="#" class="text-secondary">
            <i class="bi bi-twitter fs-1"></i>
        </a>
    </div>
{% endblock %}
