{% extends 'base.html.twig' %}

{% block title %}Notifications{% endblock %}

{% block body %}

    <header class="bg-primary d-flex justify-content-between align-items-center">
        <a href="{{ path('app_notifications') }}" class="text-white fs-1 col-1 ps-3"><i class="bi bi-arrow-left-circle-fill"></i></a>
        <h1 class="text-white my-3">
            Notifications
        </h1>
        <span class="col-1"></span>
    </header>
        <div class="card align-items-start text-secondary m-3">
            <div class="card-header bg-secondary w-100">
                <p class="card-text m-0 text-white">{{ notification.createdAt|date('Y-m-d - H:i') }}</p>
            </div>
            <div class="card-body d-flex flex-column gap-2">
                <p class="card-text m-0">{{ notification.body }}</p>
                {% if notification.needConfirmation %}
                    <a href="{{ path('booking_confirmation', {'notification': notification.id, 'booking': notification.booking.id}) }}">
                        Confirmer la r√©servation
                    </a>
                {% endif %}
            </div>
        </div>
{% endblock %}
